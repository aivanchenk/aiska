{
  "manifest_version": 3,
  "name": "Sensitive Data Guard",
  "description": "Warns before sensitive data (emails, credit cards, etc.) are submitted in forms or chats.",
  "version": "0.1",
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["scripting", "activeTab"],
  "background": { "service_worker": "sw.js" },
  "action": {
    "default_title": "Log first <textarea>"
  }
}
